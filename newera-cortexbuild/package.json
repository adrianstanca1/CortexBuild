{
  "name": "newera-cortexbuild",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.9.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace @newera/api",
    "dev:web": "npm run dev --workspace @newera/web",
    "dev": "npm run dev:api & npm run dev:web",
    "build": "npm run build --workspace @newera/api && npm run build --workspace @newera/web",
    "lint": "eslint \"apps/**/src/**/*.{ts,tsx}\" \"packages/**/src/**/*.{ts,tsx}\"",
    "test": "npm run test --workspace @newera/api && npm run test --workspace @newera/web",
    "prisma:generate": "npm run prisma:generate --workspace @newera/api",
    "migrate": "tsx scripts/migrate-sqlite-to-pg.ts",
    "seed": "tsx scripts/seed-demo-data.ts"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "better-sqlite3": "^9.6.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "pg": "^8.13.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
