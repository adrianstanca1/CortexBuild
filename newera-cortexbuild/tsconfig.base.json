{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@newera/types": ["packages/shared/types/src"],
      "@newera/types/*": ["packages/shared/types/src/*"],
      "@newera/utils/*": ["packages/shared/utils/src/*"]
    }
  }
}
